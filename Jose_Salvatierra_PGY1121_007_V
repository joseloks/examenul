        "dep_disponibles =[['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', ''],\n",
        "                  ['', '', '', '']]\n",
        "\n",
        "dep_seleccionado = []\n",
        "cliente = []\n",
        "\n",
        "def comprar_depto ():\n",
        "  rut = input(\"Ingresa tu RUT: \")\n",
        "  nombre = input(\"Ingresa tu nombre: \")\n",
        "  apellido= input(\"Ingresa tu apellido\")\n",
        "  telefono = input(\"Ingresa tu número de teléfono: \")\n",
        "  email = input(\"Ingresa tu dirección de email: \")\n",
        "  print(\"Para ingresar la letra del departamento,debe tener en cuenta que...\")\n",
        "  print(\"|A=0|\")\n",
        "  print(\"|B=1|\")\n",
        "  print(\"|C=2|\")\n",
        "  print(\"|D=3|\")\n",
        "\n",
        "  letra = int(input(\"Ingresa la letra del departamento: \"))\n",
        "  piso = int(input(\"Ingresa la piso del departamento: \"))\n",
        "\n",
        "\n",
        "  if piso < 0 or piso >= len(dep_disponibles) or letra < 0 or letra >= len(dep_disponibles[0]):\n",
        "        print(\"Coordenadas inválidas. Elige otro departa.\")\n",
        "  elif dep_disponibles[piso][letra] == 'X':\n",
        "        print(\"departamento no disponible. Elige otro lote.\")\n",
        "  else:\n",
        "        depto_seleccionado = {\n",
        "        'RUT': rut,\n",
        "        'Nombre': nombre,\n",
        "        'Apellido':apellido,\n",
        "        'Teléfono': telefono,\n",
        "        'Email': email,\n",
        "        'piso': piso,\n",
        "        'letra': letra\n",
        "        }\n",
        "        dep_seleccionado.append(depto_seleccionado)\n",
        "        dep_disponibles[piso][letra] = 'X'\n",
        "        print(\"depto seleccionado.\")\n",
        "        print(\"La Compra Se Ha Hecho Con Exito\")\n",
        "\n",
        "def deptos_disponibles():\n",
        "    print(\"departamentos Disponibles:\")\n",
        "    for piso in dep_disponibles:\n",
        "        for depto in piso:\n",
        "            print(f\"[{depto}]\", end=' ')\n",
        "        print()\n",
        "\n",
        "\n",
        "def ver_listado_compradores():\n",
        "  print(\"Clientes que han comprado un departamento:\")\n",
        "  for cliente in dep_seleccionado:\n",
        "      print(f\"RUT: {cliente['RUT']}, Nombre: {cliente['Nombre']}, Apellido:{cliente['Apellido']}, Teléfono: {cliente['Teléfono']}, Email: {cliente['Email']}\")\n",
        "      letra = cliente['letra']\n",
        "      piso = cliente['piso']\n",
        "      print(f\"departamento seleccionado: {piso}-{letra}\")\n",
        "      print(\"Detalles del departamento:\")\n",
        "      print(f\"Depto: {piso}-{letra}\")\n",
        "      print(\"-------------------\")\n",
        "\n",
        "def mostrar_ganancias_totales():\n",
        "  print(\"Tipo De Departamento|Cantidad|Total\")\n",
        "  print(\"Tipo A 3.800 UF\")   (\"|\") (\"\") (\"|\") (\"\")\n",
        "  print(\"Tipo B 3.000 UF\")   (\"|\") (\"\") (\"|\") (\"\")\n",
