        "\n",
        "  hora_actual = datetime.now().time()\n",
        "  hora_formateada = hora_actual.strftime(\"%H:%M:%S\")\n",
        "\n",
        "  print(\"Hora actual:\", hora_formateada)\n",
        "\n",
        "def final():\n",
        "    while True:\n",
        "        print(\"--- Menú ---\")\n",
        "        print(\"1. Comprar departamento\")\n",
        "        print(\"2. Mostrar departamentos disponibles\")\n",
